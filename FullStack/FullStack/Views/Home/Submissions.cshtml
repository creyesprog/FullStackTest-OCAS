@{
    ViewData["Title"] = "Submissions";
}
@model IList<FullStack.Infrastructure.Models.ViewModels.SubmissionListViewModel>
<section class="section-list">
    <div class="container list-container text-center">
        <h1 class="display-4">> Submissions</h1>
        @{
            if (Model.Count() > 0)
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col"><label asp-for="@Model.FirstOrDefault().Email"></label></th>
                            <th scope="col"><label asp-for="@Model.FirstOrDefault().FirstName"></label></th>
                            <th scope="col"><label asp-for="@Model.FirstOrDefault().LastName"></label></th>
                            <th scope="col"><label asp-for="@Model.FirstOrDefault().Activity"></label></th>
                            <th scope="col"><label asp-for="@Model.FirstOrDefault().Comments"></label></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var submission in Model)
                        {
                            <tr>
                                <td>@submission.Email</td>
                                <td>@submission.FirstName</td>
                                <td>@submission.LastName</td>
                                <td>@submission.Activity</td>
                                <td>@submission.Comments</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        }
